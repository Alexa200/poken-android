<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:clickable="true"
    android:focusable="true"
    tools:background="#999"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/icon_24dp"
    android:layout_marginBottom="@dimen/icon_24dp">

    <View
        android:layout_width="@dimen/home_menu_icon_width"
        android:layout_height="@dimen/home_menu_icon_width"
        android:background="@drawable/bg_home_item"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/clickable_size_64"
        android:layout_height="@dimen/clickable_size_64"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_home_pacakge_48_white"/>

    <TextView
        android:id="@+id/home_menu_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_icon"
        android:layout_marginTop="@dimen/item_gap_m"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white_100"
        android:textSize="@dimen/text_caption"
        tools:text="Booking" />

</RelativeLayout>