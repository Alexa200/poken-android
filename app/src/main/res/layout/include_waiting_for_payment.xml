<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_gap_s"
    android:id="@+id/parentInfoPaymentRequired"
    app:cardBackgroundColor="@color/eco">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/item_gap_s"
        android:paddingLeft="@dimen/item_gap_m"
        android:paddingRight="@dimen/item_gap_m"
        android:paddingTop="@dimen/item_gap_s">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextListSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:textColor="@color/white_100"
            android:text="@string/msg_waiting_for_payment" />

        <TextView
            android:id="@+id/tvSubtitle"
            style="@style/TextListSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="@dimen/item_gap_s"
            android:gravity="left"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white_100"
            android:text="@string/lbl_order_payment_expires"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>