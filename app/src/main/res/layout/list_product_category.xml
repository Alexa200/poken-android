<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_gap_s"
    android:layout_marginBottom="@dimen/item_gap_s"
    android:layout_marginLeft="@dimen/item_gap_m"
    android:layout_marginRight="@dimen/item_gap_m"
    app:cardCornerRadius="@dimen/item_gap_s"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/clickable_size_64"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:paddingLeft="@dimen/item_gap_m"
        android:paddingRight="@dimen/item_gap_m"
        android:paddingTop="@dimen/item_gap_s"
        android:paddingBottom="@dimen/item_gap_s"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Kejora Line 2" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/TextBodySecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="middle"
            android:text="Menyediakan seluruh kebutuhan pakaian Anda."/>

    </LinearLayout>

</android.support.v7.widget.CardView>