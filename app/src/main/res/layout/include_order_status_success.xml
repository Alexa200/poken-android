<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/statusReceivedTvTitle"
        style="@style/TextBodyDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_status_order_sucsess" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/statusReceivedTvTitle"
        android:layout_alignTop="@id/statusReceivedTvTitle"
        android:layout_toRightOf="@id/statusReceivedTvTitle"
        android:contentDescription="@string/lbl_status_order_sucsess"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_success_and_happy" />

</RelativeLayout>