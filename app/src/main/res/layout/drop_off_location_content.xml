<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/f_vendor_map">

    <fragment
        android:id="@+id/mapPickup"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewFilterView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/clickable_size"
        android:translationY="-58dp"
        tools:translationY="0dp"
        android:layout_margin="@dimen/item_gap_m"
        app:cardCornerRadius="@dimen/item_gap_s"
        app:cardElevation="@dimen/item_gap_s">

        <RelativeLayout
            android:id="@+id/parentClickableFilterDropOffLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/clickable_size"
            android:minWidth="@dimen/height_100dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/item_gap_l"
            android:paddingRight="@dimen/item_gap_l">

            <ImageView
                android:id="@+id/imageViewFilteredVendor"
                android:layout_width="@dimen/clickable_size"
                android:layout_height="@dimen/clickable_size_32"
                android:layout_centerVertical="true"
                tools:src="@drawable/courier_logo_jne"/>

            <TextView
                android:id="@+id/textViewFilteredText"
                style="@style/TextListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_gap_m"
                android:layout_toRightOf="@+id/imageViewFilteredVendor"
                android:ellipsize="middle"
                android:maxEms="5"
                android:maxLines="1"
                android:textStyle="bold"
                tools:text="SML Express - Indonesia Tanah Air Beta." />

            <ImageView
                android:id="@+id/imageViewDropDown"
                android:layout_width="@dimen/icon_24dp"
                android:layout_height="@dimen/icon_24dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textViewFilteredText"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:tint="@color/style_overlay_grey" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>