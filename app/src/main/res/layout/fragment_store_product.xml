<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.unware.poken.ui.store.product.view.StoreProductListFragment">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlStoreProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvStoreProduct"
            android:name="id.unware.poken.ui.store.product.view.StoreProductFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/item_gap_l"
            android:clipToPadding="false"
            android:paddingTop="@dimen/item_gap_m"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/list_store_product_item" />

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
