<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_pickup_map">

    <fragment
        android:id="@+id/mapPickup"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/parentAddressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_100"
        android:translationY="-99dp"
        tools:translationY="0dp">

        <RelativeLayout
            android:id="@+id/parentClickableFetchedAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/clickable_size"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageViewIconLocation"
                android:layout_width="@dimen/icon_24dp"
                android:layout_height="@dimen/icon_24dp"
                android:padding="@dimen/item_gap_xs"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_gap_m"
                android:layout_marginRight="@dimen/item_gap_m"
                android:src="@drawable/ic_place_black_24dp"
                android:tint="@color/style_overlay_grey" />

            <TextView
                android:id="@+id/txtTitle"
                style="@style/TextBodyDefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/clickable_size"
                android:layout_toLeftOf="@+id/imageViewIconSearchLocation"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"

                tools:text="Jl. Lapangan Bola No. 3 \nLine 2\nLine 3" />

            <ImageView
                android:id="@+id/imageViewIconSearchLocation"
                android:layout_width="@dimen/icon_24dp"
                android:layout_height="@dimen/icon_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/item_gap_m"
                android:layout_marginRight="@dimen/item_gap_m"
                android:src="@drawable/places_ic_search"
                android:tint="@color/style_overlay_grey"
                android:contentDescription="@string/action_search_location"/>

        </RelativeLayout>

        <View
            android:id="@+id/viewSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/clickable_size"
            android:layout_below="@+id/parentClickableFetchedAddress"
            android:background="@color/separator_view_lighter" />

        <RelativeLayout
            android:id="@+id/parentClickablePickupNote"
            android:layout_width="match_parent"
            android:layout_height="@dimen/clickable_size"
            android:layout_below="@+id/viewSeparator"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageButtonAddNote"
                android:layout_width="@dimen/icon_24dp"
                android:layout_height="@dimen/icon_24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/item_gap_xs"
                android:layout_marginLeft="@dimen/item_gap_m"
                android:layout_marginRight="@dimen/item_gap_m"
                android:src="@drawable/ic_note_add_black_24dp"
                android:tint="@color/style_overlay_grey" />

            <TextView
                android:id="@+id/textViewAddedNotes"
                style="@style/TextBodySecondary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/clickable_size"
                android:layout_marginRight="@dimen/clickable_size"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/item_gap_s"
                android:paddingTop="@dimen/item_gap_s"
                android:text="@string/hint_note_for_driver"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Test hingga dua line text. \nLine Dua\nLine Tiga"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator_view_lighter"
            android:layout_below="@+id/parentClickablePickupNote"/>

        <FrameLayout
            android:id="@+id/frameSearchAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewSeparator"
            android:background="@color/white_100"
            android:minHeight="@dimen/clickable_size"
            android:visibility="gone">

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/parentIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/parentAddressContainer"
        android:layout_marginBottom="@dimen/clickable_size_64"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_pin_pickup_point" />
        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

    </LinearLayout>

</RelativeLayout>