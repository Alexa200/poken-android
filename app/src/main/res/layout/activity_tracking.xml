<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"

    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Vertical line -->
        <View
            android:id="@+id/viewVerticalLine"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="124dp"
            android:layout_marginLeft="35dp"
            android:background="@color/separator_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/item_gap_s">

            <!-- S: Search RESI section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/clickable_size"
                android:paddingRight="@dimen/item_gap_s"
                android:paddingLeft="@dimen/item_gap_s">

                <ImageButton
                    android:id="@+id/imageButtonBack"
                    android:layout_width="@dimen/clickable_size"
                    android:layout_height="@dimen/clickable_size"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_menu_item"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_chevron_left_32dp" />

                <EditText
                    android:id="@+id/editTextTracking"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/clickable_size"
                    android:layout_toRightOf="@+id/imageButtonBack"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    android:hint="@string/hint_air_waybill"
                    android:inputType="number"
                    android:imeOptions="actionSearch"
                    android:padding="@dimen/item_gap_m"
                    android:paddingLeft="0dp"
                    android:paddingRight="100dp" />

                <RelativeLayout
                    android:id="@+id/viewGroupBtnCheck"
                    android:layout_width="@dimen/clickable_size"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_right_radius_blue"
                    android:clickable="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/textViewCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_search_view"
                        android:text="@string/btn_check"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_caption"
                        android:contentDescription="@string/hint_air_waybill"/>

                </RelativeLayout>
            </RelativeLayout>
            <!-- E: Search RESI section-->

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/clickable_size"

                app:tabMode="scrollable"
                app:tabIndicatorColor="@color/colorPrimaryDark"
                app:tabSelectedTextColor="@color/colorPrimaryDark"
                app:tabTextColor="@color/black_60" />

            <android.support.v4.view.ViewPager
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewTracking"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/item_gap_m"
                android:layout_weight="1"
                tools:context="id.unware.tiki.TrackingActivity"
                tools:listitem="@layout/item_tracking"
                tools:showIn="@layout/activity_tracking" />

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
