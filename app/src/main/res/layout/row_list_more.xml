<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/item_gap_m"
    android:paddingLeft="@dimen/item_gap_l"
    android:paddingRight="@dimen/item_gap_l"
    android:paddingTop="@dimen/item_gap_m">

    <TextView
        android:id="@+id/textViewShowMore"
        style="@style/TextListTitle"
        android:layout_toLeftOf="@+id/imageViewRightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:text="Load more"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:id="@+id/imageViewRightButton"
        android:layout_width="@dimen/clickable_size_32"
        android:layout_height="@dimen/clickable_size_32"
        android:scaleType="centerInside"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:rotation="180"
        android:src="@drawable/ic_chevron_left_24dp"
        android:tint="@color/colorAccent" />

</RelativeLayout>