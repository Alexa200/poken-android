<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentView"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ProgressBar
                android:id="@+id/progressBarRateActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/item_gap_l"
                android:indeterminate="true"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/parentOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingLeft="@dimen/item_gap_l"
                android:paddingRight="@dimen/item_gap_l">

                <RelativeLayout
                    android:id="@+id/parentOriginIndicator"
                    android:layout_width="@dimen/item_gap_m"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textViewOrigin"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/viewIndicatorOrigin"
                        android:layout_width="@dimen/item_gap_m"
                        android:layout_height="@dimen/item_gap_m"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_circle"
                        android:tint="@color/package_status_sent"/>

                    <View
                        android:id="@+id/viewIndicatorOrigin1"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/viewIndicatorOrigin"
                        android:layout_centerHorizontal="true"
                        android:background="@color/style_overlay_grey"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewOrigin"

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/clickable_size_64"

                    android:layout_marginLeft="@dimen/item_gap_m"
                    android:layout_marginStart="@dimen/item_gap_m"

                    android:layout_toEndOf="@+id/parentOriginIndicator"
                    android:layout_toRightOf="@+id/parentOriginIndicator"

                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:text="@string/origin"
                    android:textSize="@dimen/text_button"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parentDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingLeft="@dimen/item_gap_l"
                android:paddingRight="@dimen/item_gap_l">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/item_gap_s"
                    android:layout_marginStart="@dimen/item_gap_s"
                    android:layout_toEndOf="@+id/parentDestinationIndicator"
                    android:layout_toRightOf="@+id/parentDestinationIndicator"
                    android:background="@color/separator_view"/>

                <RelativeLayout
                    android:id="@+id/parentDestinationIndicator"
                    android:layout_width="@dimen/item_gap_m"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textViewDestination"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/viewIndicatorDest"
                        android:layout_width="@dimen/item_gap_m"
                        android:layout_height="@dimen/item_gap_m"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_circle"
                        android:tint="@color/package_status_delivered"/>

                    <View
                        android:id="@+id/viewIndicatorDest1"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/viewIndicatorDest"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/style_overlay_grey"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/clickable_size_64"
                    android:layout_marginLeft="@dimen/item_gap_m"
                    android:layout_marginStart="@dimen/item_gap_m"
                    android:layout_toEndOf="@+id/parentDestinationIndicator"
                    android:layout_toRightOf="@+id/parentDestinationIndicator"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="@string/destination"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_button"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separator_view"/>

            <!-- S: Group for weight and plus minus buttons-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/item_gap_m"
                android:layout_height="@dimen/clickable_size"
                android:paddingLeft="@dimen/item_gap_l"
                android:paddingRight="@dimen/item_gap_l">


                <RelativeLayout
                    android:id="@+id/parentWeight"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_bottom_line">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/textViewMeasure"
                        android:layout_toStartOf="@+id/textViewMeasure"
                        android:background="@android:color/transparent"
                        app:errorEnabled="true">

                        <!--Weight limited to 5 digits-->
                        <EditText
                            android:id="@+id/editTextWeight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="@string/weight"
                            android:inputType="numberDecimal"
                            android:maxLength="5"
                            android:text="@string/initial_weight_val"
                            android:textSize="@dimen/text_button"/>

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/textViewMeasure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/textInputWeight"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="8dp"
                        android:text="@string/kg"
                        android:textSize="@dimen/text_button"/>

                </RelativeLayout>

                <View
                    android:id="@+id/viewSeparatorLblButton"
                    android:layout_width="1px"
                    android:layout_height="@dimen/clickable_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_gap_m"
                    android:layout_marginStart="@dimen/item_gap_m"
                    android:layout_toEndOf="@+id/parentWeight"
                    android:layout_toRightOf="@+id/parentWeight"
                    android:background="@color/separator_view"/>

                <Button
                    android:id="@+id/buttonMinus"
                    android:layout_width="@dimen/clickable_size"
                    android:layout_height="@dimen/clickable_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_gap_s"
                    android:layout_marginStart="@dimen/item_gap_s"
                    android:layout_toEndOf="@+id/viewSeparatorLblButton"
                    android:layout_toRightOf="@+id/viewSeparatorLblButton"
                    android:background="@drawable/button_incr_decr"
                    android:text="@string/minus"
                    android:textColor="#586269"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/buttonPlus"
                    android:layout_width="@dimen/clickable_size"
                    android:layout_height="@dimen/clickable_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/buttonMinus"
                    android:layout_toRightOf="@+id/buttonMinus"
                    android:background="@drawable/button_incr_decr"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textColor="#586269"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/buttonCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/clickable_size"

                    style="@style/ButtonDefault"

                    android:layout_alignParentRight="true"

                    android:text="@string/check2"/>

            </RelativeLayout>
            <!-- E: Group for weight and plus minus buttons-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <id.unware.poken.customView.ExpandableHeightListView
                    android:id="@+id/listViewRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_gap_l"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"
                    tools:listitem="@layout/item_rate"/>

                <TextView
                    android:id="@+id/tvEmptyRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/empty_state_text_view_marginTop"
                    android:padding="@dimen/item_gap_m"
                    android:gravity="center"
                    android:textAppearance="?android:textAppearanceMedium"/>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
