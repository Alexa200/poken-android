<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minWidth="@dimen/navigation_drawer_width"
              android:background="@color/white_100"
              android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100dp"
        map:cameraZoom="15"
        map:liteMode="true"
        map:mapType="normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerViewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/clickable_size"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator_view" />

        <RelativeLayout
            android:id="@+id/relativeLayoutBtnReuseAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/clickable_size"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="@dimen/icon_24dp"
                android:layout_height="@dimen/icon_24dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/btn_compose_package"
                android:src="@drawable/ic_chevron_left_24dp"
                android:tint="@color/myAccentColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageViewBack"
                android:gravity="center_vertical"
                android:text="@string/btn_reuse_address"
                android:textColor="@color/myAccentColor"
                android:textSize="@dimen/text_button" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>