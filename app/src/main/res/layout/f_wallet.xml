<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical">

        <!-- S: Balance amount-->
        <RelativeLayout
            android:id="@+id/frameLayoutProfileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/separator_view_lighter"
            android:gravity="center_vertical"
            android:minHeight="@dimen/clickable_size_64"
            android:paddingLeft="@dimen/item_gap_l"
            android:paddingRight="@dimen/item_gap_l">

            <!-- Alpha is 0 as initial state-->
            <TextView
                android:id="@+id/textViewTotalBalanceLable"
                style="@style/TextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:alpha="0"
                android:text="@string/lbl_wallet_balance"

                tools:alpha="1" />

            <!-- Alpha is 0 as initial state-->
            <TextView
                android:id="@+id/textViewBalance"
                style="@style/TextListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTotalBalanceLable"
                android:layout_centerHorizontal="true"
                android:alpha="0"

                tools:alpha="1"
                tools:text="Rp 79.890.000" />

            <ProgressBar
                android:id="@+id/progressBarWalletStatus"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/clickable_size_32"
                android:layout_height="@dimen/clickable_size_32"
                android:layout_centerHorizontal="true"

                android:visibility="gone"

                tools:visibility="visible" />

        </RelativeLayout>
        <!-- E: Balance amount-->

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/clickable_size_32"
            android:background="@color/separator_view_lighter"

            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/black_50_alpha" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/separator_view" />

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>