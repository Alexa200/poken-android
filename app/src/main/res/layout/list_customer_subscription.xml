<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentSubscribeds"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_gap_s"
    android:layout_marginTop="@dimen/item_gap_s"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white_100"
    app:cardCornerRadius="@dimen/default_button_radius"
    app:cardElevation="@dimen/default_button_radius"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="@dimen/clickable_size_64"
            android:layout_height="@dimen/clickable_size_64"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/item_gap_l"
            android:layout_marginLeft="@dimen/item_gap_l"
            android:layout_marginRight="@dimen/item_gap_m"
            android:layout_marginTop="@dimen/item_gap_l"
            android:contentDescription="@string/hint_product_images"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/tvSellerName"
            style="@style/TextListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_gap_l"
            android:layout_marginTop="@dimen/item_gap_l"
            android:layout_toRightOf="@+id/itemImage"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:minLines="1"
            tools:text="Kejora Busana Cabang Sadabuan" />

        <TextView
            android:id="@+id/tvSellerTagLine"
            style="@style/TextBodyDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSellerName"
            android:layout_marginRight="@dimen/item_gap_l"
            android:layout_marginTop="@dimen/item_gap_xs"
            android:layout_toRightOf="@+id/itemImage"
            android:ellipsize="middle"
            android:gravity="left"
            android:singleLine="true"
            tools:text="Menyediakan kebutuhan busana paling lengkap" />

        <TextView
            android:id="@+id/tvSellerLocation"
            style="@style/TextBodySecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSellerTagLine"
            android:layout_marginRight="@dimen/item_gap_l"
            android:layout_marginTop="@dimen/item_gap_xs"
            android:layout_toRightOf="@+id/itemImage"
            android:ellipsize="middle"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/item_gap_s"
            android:singleLine="true"
            tools:text="Padang Sidempuan" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
