<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/editTextTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:inputType="text|textNoSuggestions|textCapWords"
        android:paddingTop="@dimen/item_gap_m"
        android:paddingBottom="@dimen/item_gap_m"
        android:paddingRight="@dimen/item_gap_m"
        android:paddingLeft="@dimen/item_gap_m"

        android:hint="@string/hint_search_area"/>

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/icon_24dp"
        android:layout_height="@dimen/icon_24dp"
        android:layout_marginRight="@dimen/item_gap_m"
        android:layout_marginTop="@dimen/item_gap_m"
        android:indeterminate="true"
        android:visibility="invisible"

        android:layout_alignParentRight="true"

        tools:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_below="@+id/editTextTracking"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
