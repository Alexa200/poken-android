<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/height_100dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/clickable_size_64"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_gap_s"
        android:paddingRight="@dimen/item_gap_m">

        <TextView
            android:id="@+id/tvDate"
            style="@style/TextBodyDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black_90"
            tools:text="Sep 01, 2016" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/TextBodySecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="19.44 PM" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/parentIndicatorContainer"
        android:layout_width="@dimen/icon_24dp"
        android:layout_height="@dimen/icon_24dp"
        android:layout_marginLeft="@dimen/height_100dp"
        android:layout_alignTop="@+id/tvStatus"
        android:layout_alignBottom="@+id/tvStatus">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/separator_view"
            android:layout_centerHorizontal="true"
            />

        <FrameLayout
            android:id="@+id/parentIndicator"
            android:layout_width="@dimen/icon_24dp"
            android:layout_height="@dimen/icon_24dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/item_gap_l"
                android:layout_height="@dimen/item_gap_l"
                android:layout_gravity="center"
                android:src="@drawable/ic_circle"
                android:tint="@color/green" />

            <ImageView
                android:layout_width="@dimen/item_gap_m"
                android:layout_height="@dimen/item_gap_m"
                android:layout_gravity="center"
                android:src="@drawable/ic_check" />
        </FrameLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/tvStatus"
        style="@style/TextBodyDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/clickable_size_64"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_gap_m"
        android:layout_marginRight="@dimen/item_gap_m"
        android:layout_toRightOf="@+id/parentIndicatorContainer"
        android:paddingTop="@dimen/item_gap_m"
        android:paddingBottom="@dimen/item_gap_m"

        tools:text="Paket sudah diterima di oleh Hayati Widianti" />
</RelativeLayout>