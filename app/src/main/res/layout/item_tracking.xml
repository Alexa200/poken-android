<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewStat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/item_gap_m"
        android:layout_centerVertical="true"
        android:src="@drawable/tracking_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/item_gap_m"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@id/imageViewStat"
        android:background="@drawable/tracking_item"
        android:orientation="vertical"
        android:padding="@dimen/item_gap_l">

        <TextView
            android:id="@+id/textViewDest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_90"
            tools:text="PLUIT JAKARTA"/>

        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_gap_s"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black_90"
            tools:text="Arrived at destination"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_gap_s">

            <ImageView
                android:id="@+id/imageViewClock"
                android:layout_width="@dimen/item_gap_l"
                android:layout_height="@dimen/item_gap_l"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/clock_faster_black"
                android:tint="@color/black_90"/>

            <TextView
                android:id="@+id/textViewDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/imageViewClock"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black_90"
                tools:text="7 Oct, 09:07"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>