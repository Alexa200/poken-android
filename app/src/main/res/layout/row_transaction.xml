<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewAmount"
        style="@style/TextListTitle"
        android:padding="@dimen/item_gap_m"
        android:layout_toLeftOf="@+id/textViewBalance"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"

        tools:text="-Rp 12.000.000"/>

    <TextView
        android:id="@+id/textViewBalance"
        style="@style/TextListTitle"
        android:layout_alignParentRight="true"
        android:padding="@dimen/item_gap_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"

        tools:text="Rp 9.000.000"/>

    <TextView
        android:id="@+id/textViewTransactionId"
        style="@style/TextBodyDefault"
        android:layout_below="@+id/textViewAmount"
        android:paddingTop="@dimen/item_gap_s"
        android:paddingLeft="@dimen/item_gap_m"
        android:paddingRight="@dimen/item_gap_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="D0001 * TOPUP"/>

    <TextView
        android:id="@+id/textViewTransactionInfo"
        style="@style/TextBodyDefault"
        android:layout_below="@+id/textViewTransactionId"
        android:paddingLeft="@dimen/item_gap_m"
        android:paddingRight="@dimen/item_gap_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="10"

        tools:text="Initial Deposit"/>

    <TextView
        android:id="@+id/textViewTransactionStatus"
        style="@style/TextBodyDefault"
        android:layout_below="@+id/textViewTransactionInfo"
        android:paddingLeft="@dimen/item_gap_m"
        android:paddingRight="@dimen/item_gap_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Pending"/>

    <TextView
        android:id="@+id/textViewDatetime"
        style="@style/TextBodySecondary"
        android:layout_below="@+id/textViewTransactionStatus"
        android:paddingLeft="@dimen/item_gap_m"
        android:paddingRight="@dimen/item_gap_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="10"

        tools:text="2 Februari 2017, 12:25"/>

    <View
        android:id="@+id/viewSeparator"
        android:layout_marginTop="@dimen/item_gap_m"
        android:layout_marginBottom="@dimen/item_gap_m"
        android:layout_below="@+id/textViewDatetime"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/separator_view_lighter"/>

</RelativeLayout>
