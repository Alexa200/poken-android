<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:padding="@dimen/item_gap_s">

    <TextView
        android:id="@+id/tvMapName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="POS PENGUMBEN"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_material_dark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPhone"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notif_call" />

        <TextView
            android:id="@+id/tvMapPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            tools:text="082362588301"
            android:textColor="@color/primary_material_dark"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/separator_view" />

    <TextView
        android:id="@+id/tvMapAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:text="JL.POS PENGUMBEN RAYA NO.2 RT.01/RW.06 - KEMBANGAN"
        android:textColor="@color/primary_material_dark" />

    <TextView
        android:id="@+id/tvMapTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Open : 08.00-18.00"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_info_window_helper"
        android:gravity="right"
        android:layout_marginTop="@dimen/item_gap_s"
        android:layout_marginRight="@dimen/item_gap_s"/>

</LinearLayout>