<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentRowPackage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:minHeight="@dimen/clickable_size_64"
    android:paddingBottom="@dimen/item_gap_m"
    android:paddingLeft="@dimen/item_gap_l"
    android:paddingRight="@dimen/item_gap_l"
    android:paddingTop="@dimen/item_gap_m">

    <TextView
        android:id="@+id/rowShippingCourierName"
        style="@style/TextListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:textColor="@color/material_color_grey_900"
        android:textStyle="bold"
        tools:text="POS Indonesia" />

    <TextView
        android:id="@+id/rowShippingFee"
        style="@style/TextListSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rowShippingCourierName"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="Rp. 50.000" />

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rowShippingIsActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusableInTouchMode="false"
        app:buttonTint="@color/colorAccent"/>

</RelativeLayout>