<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When button is disabled-->
    <item android:state_enabled="false">
        <shape
            android:padding="@dimen/item_gap_m"
            android:shape="rectangle">
            <size android:height="@dimen/clickable_size_32" android:width="@dimen/clickable_size_32"/>
            <solid android:color="@color/separator_view" />
            <stroke
                android:width="2dp"
                android:color="@color/separator_view" />
            <corners
                android:radius="@dimen/clickable_size_32" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:padding="@dimen/item_gap_m"
            android:shape="rectangle">
            <size android:height="@dimen/clickable_size_32" android:width="@dimen/clickable_size_32"/>
            <solid android:color="@color/btn_pressed_accent" />
            <corners
                android:radius="@dimen/clickable_size_32" />
        </shape>
    </item>

    <item>
        <shape
            android:padding="@dimen/item_gap_m"
            android:shape="rectangle">
            <size android:height="@dimen/clickable_size_32" android:width="@dimen/clickable_size_32"/>
            <solid android:color="@color/colorAccent" />

            <corners
                android:radius="@dimen/clickable_size_32" />
        </shape>
    </item>


</selector>