<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- TODO : This is ugly!-->
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Base application theme.
             Defining this lets values-v21/styles.xml reuse it with changes. -->
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Toolbar.Transparent" parent="AppTheme.Toolbar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Define custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black_90</item>
        <item name="android:textColorHighlight">@color/btn_higlight_accent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <!-- Define alert dialog theme here extending from base -->
    <style name="AppAlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/black_90</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/btn_higlight_accent</item>
    </style>

    <style name="ToolBarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">@color/colorPrimary</item>
        <!--<item name="actionBarWidgetTheme">@style/WidgetStyle</item>-->
    </style>

    <style name="normal_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <style name="disabled_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/style_overlay_grey</item>
    </style>

    <style name="StyleBtnOrange" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--<style name="WidgetStyle" parent="">-->
    <!--<item name="colorControlNormal">@color/drawerArrowColor</item>-->
    <!--</style>-->

    <!-- Style for notification -->
    <style name="NotificationContent" parent="@android:style/TextAppearance.DeviceDefault.Inverse">
        <!--<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>-->
        <item name="android:textColor">#121314</item>
    </style>

    <!--Style for CardView in Package detail-->
    <style name="PokenCardView" parent="CardView.Light">
        <item name="android:background">@color/white_100</item>
        <item name="cardCornerRadius">@dimen/card_radius_s</item>
        <item name="cardBackgroundColor">@color/card_bg</item>
    </style>

    <style name="PokenCardView.Flat" parent="PokenCardView">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <!--Style for EditText-->
    <style name="PaketEditText">
        <item name="android:textColorHint">@color/material_color_grey_400</item>
    </style>

    <style name="PaketEditText.Default" parent="PaketEditText">
        <item name="android:textColor">@color/black_90</item>
    </style>

    <style name="PaketEditText.Dimmed" parent="PaketEditText">
        <item name="android:textColor">@color/material_color_grey_600</item>
    </style>

    <!--Style for dimmed text-->

    <!-- Page Style-->
    <style name="PaketTextView.PageTextTitle" parent="PaketTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/item_gap_l</item>
    </style>

    <style name="PaketTextView.PageTextSubtitle" parent="PaketTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextBodySecondary">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/style_overlay_grey</item>
    </style>

    <style name="TextListTitle">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/black_90</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="TextListSubtitle">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/black_90</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <!--Default background with background-->

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/btn_higlight_accent</item>
        <item name="colorButtonNormal">@color/btn_primary_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="MyButton.Secondary" parent="MyButton">
        <item name="colorControlHighlight">@color/separator_view</item>
        <item name="colorButtonNormal">@color/separator_view_lighter</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ToolbarDarkOverflow" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- android:textColorPrimary is the  color of the title text
             in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:textColorPrimary">@color/black_90</item>

        <!-- android:textColorPrimaryInverse is the  color of the title
             text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <!-- <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item> -->

        <!-- android:actionMenuTextColor is the color of the text of
              action (menu) items in the Toolbar, at least in the
              Theme.AppCompat theme.
              For some reason, they already get the textColorPrimary
              when running on API 21, but not on older versions of
              Android, so this is only necessary to support older
              Android versions.-->
        <item name="actionMenuTextColor">@color/black_90</item>
        <!-- android:textColorSecondary is the color of the menu
             overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/black_90</item>

        <!-- This would set the toolbar's background color,
              but setting this also changes the popup menu's background,
              even if we define popupTheme for our <Toolbar> -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>

    <!--<style name="MyButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless"></style>-->
    <style name="ButtonSelection" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_selection_accent</item>
        <item name="android:textColor">@color/text_selection_accent</item>
    </style>

    <!-- Layout style parent-->

    <!-- Layout style for page header-->

    <style name="PaketTextView">
        <item name="android:textColor">@color/black_90</item>
    </style>

    <style name="TextBodyDefault" parent="PaketTextView">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <!--Style for default text on white background-->
    <style name="TextDefault" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/black_90</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <!--Style for default text only button (borderless button)-->
    <style name="BorderlessButtonAccent" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/btn_higlight_accent</item>

        <item name="android:gravity">center</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="TextCaption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/style_overlay_grey</item>
    </style>

    <style name="TextTitle" parent="PaketTextView">
        <item name="android:textSize">@dimen/text_title</item>

        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="PaketEditText.Default.Number" parent="PaketEditText.Default">
        <item name="android:fontFamily">monospace</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
