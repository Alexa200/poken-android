<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="MyTheme.ActionMode" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionModeBackground">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Define custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black_90</item>
        <item name="android:textColorHighlight">@color/btn_higlight_accent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <!-- Define alert dialog theme here extending from base -->
    <style name="AppAlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/black_90</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/btn_higlight_accent</item>
    </style>

    <style name="ToolBarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">@color/colorPrimary</item>
        <!--<item name="actionBarWidgetTheme">@style/WidgetStyle</item>-->
    </style>

    <style name="normal_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <style name="disabled_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/style_overlay_grey</item>
    </style>

    <style name="StyleBtnOrange" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--<style name="WidgetStyle" parent="">-->
    <!--<item name="colorControlNormal">@color/drawerArrowColor</item>-->
    <!--</style>-->

    <!-- Style for notification -->
    <style name="NotificationContent" parent="@android:style/TextAppearance.DeviceDefault.Inverse">
        <!--<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>-->
        <item name="android:textColor">#121314</item>
    </style>

    <!--Style for CardView in Package detail-->
    <style name="GapMediumCardView" parent="CardView.Light">
        <item name="android:layout_marginRight">@dimen/item_gap_m</item>
        <item name="android:layout_marginLeft">@dimen/item_gap_m</item>
        <item name="android:layout_marginBottom">@dimen/item_gap_s</item>
        <item name="android:background">@color/white_100</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/white_100</item>
    </style>

    <!--Style for EditText-->
    <style name="PaketEditText">
        <item name="android:textColorHint">@color/material_color_grey_400</item>
    </style>

    <style name="PaketEditText.Default" parent="PaketEditText">
        <item name="android:textColor">@color/black_90</item>
    </style>

    <style name="PaketEditText.Dimmed" parent="PaketEditText">
        <item name="android:textColor">@color/material_color_grey_600</item>
    </style>

    <!--Style for dimmed text-->
    <style name="TextDimmmed">
        <item name="android:textColor">@color/black_50_alpha</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Page Style-->
    <style name="PaketTextView.PageTextTitle" parent="PaketTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/item_gap_l</item>
    </style>

    <style name="PaketTextView.PageTextSubtitle" parent="PaketTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextBodySecondary">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/style_overlay_grey</item>
    </style>

    <style name="TextListTitle">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/black_90</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="TextListSubtitle">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/black_90</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="TextDiscountedPrice">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/style_overlay_grey</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <!--Default background with background-->
    <style name="ButtonDefault">
        <item name="android:background">@drawable/bg_btn_default</item>

        <item name="android:gravity">center</item>

        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="ButtonDefault.HeaderButton" parent="ButtonDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/clickable_size</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/item_gap_l</item>
        <item name="android:paddingRight">@dimen/item_gap_l</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minWidth">@dimen/clickable_size</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/btn_higlight_accent</item>
        <item name="colorButtonNormal">@color/btn_primary_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="ToolbarDarkOverflow" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- android:textColorPrimary is the  color of the title text
             in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>

        <!-- android:textColorPrimaryInverse is the  color of the title
             text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <!-- <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item> -->

        <!-- android:actionMenuTextColor is the color of the text of
              action (menu) items in the Toolbar, at least in the
              Theme.AppCompat theme.
              For some reason, they already get the textColorPrimary
              when running on API 21, but not on older versions of
              Android, so this is only necessary to support older
              Android versions.-->
        <item name="actionMenuTextColor">@color/abc_primary_text_material_light</item>
        <!-- android:textColorSecondary is the color of the menu
             overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>

        <!-- This would set the toolbar's background color,
              but setting this also changes the popup menu's background,
              even if we define popupTheme for our <Toolbar> -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>

    <style name="PaketImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="PaketImageButton.HeaderBack" parent="PaketImageButton">
        <item name="android:layout_width">@dimen/clickable_size</item>
        <item name="android:layout_height">@dimen/clickable_size</item>
        <item name="android:src">@drawable/ic_arrow_back_black_32dp</item>
        <item name="android:tint">@color/black_90</item>
        <item name="android:padding">@dimen/item_gap_xs</item>
    </style>

    <style name="ImageButtonAccentSmall">
        <item name="android:layout_height">@dimen/clickable_size_32</item>
        <item name="android:layout_width">@dimen/clickable_size_32</item>
        <item name="android:background">@drawable/bg_btn_accent</item>
        <item name="android:tint">@color/white_100</item>
        <item name="android:layout_marginLeft">@dimen/item_gap_s</item>
        <item name="android:layout_marginRight">@dimen/item_gap_s</item>
    </style>

    <!--<style name="MyButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless"></style>-->
    <style name="ButtonSelection" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_selection_accent</item>
        <item name="android:textColor">@color/text_selection_accent</item>
    </style>

    <!-- Layout style parent-->
    <style name="PaketLayout">
        <item name="android:background">@color/white_100</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Layout style for page header-->
    <style name="PaketLayout.PageHeader" parent="PaketLayout">
        <item name="android:layout_height">@dimen/clickable_size</item>
        <!--<item name="android:layout_marginLeft">@dimen/item_gap_32</item>-->
        <item name="android:background">@color/white_100</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PaketLayout.PageHeader.SubpageHeader">
        <item name="android:layout_marginLeft">@dimen/item_gap_l</item>
    </style>

    <style name="PaketTextView">
        <item name="android:textColor">@color/black_90</item>
    </style>

    <style name="TextBodyDefault" parent="PaketTextView">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <!--<style name="TextBodySecondary">-->
    <!--<item name="android:textSize">@dimen/text_body</item>-->
    <!--<item name="android:textColor">@color/style_overlay_grey</item>-->
    <!--</style>-->

    <!--<style name="TextListTitle">-->
    <!--<item name="android:textSize">@dimen/text_button</item>-->
    <!--<item name="android:textColor">@color/black_90</item>-->
    <!--<item name="android:lineSpacingMultiplier">1.15</item>-->
    <!--</style>-->

    <!--Style for small thumbnail for text representation icon-->
    <style name="ThumbnailSmallDefault">
        <item name="android:layout_width">@dimen/item_gap_l</item>
        <item name="android:layout_height">@dimen/item_gap_l</item>
        <item name="android:layout_marginRight">@dimen/item_gap_m</item>
        <item name="android:tint">@color/black_90</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--Style for default text on white background-->
    <style name="TextDefault" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/black_90</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <!--Style for default text only button (borderless button)-->
    <style name="BorderlessButtonAccent" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/btn_higlight_accent</item>

        <item name="android:gravity">center</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <!--Style for EditText-->
    <!--<style name="PaketEditText">-->
    <!--<item name="android:textColorHint">@color/material_color_grey_400</item>-->
    <!--</style>-->

    <!--<style name="PaketEditText.Default" parent="PaketEditText">-->
    <!--<item name="android:textColor">@color/black_90</item>-->
    <!--</style>-->

    <style name="TextCaption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/style_overlay_grey</item>
    </style>

    <style name="TextTitle" parent="PaketTextView">
        <item name="android:textSize">@dimen/text_title</item>

        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="PaketEditText.Default.Number" parent="PaketEditText.Default">
        <item name="android:fontFamily">monospace</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeButtonLabel">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">@dimen/text_button</item>
    </style>
</resources>
